@using System.Diagnostics.CodeAnalysis;
@using CaptainCoder.TacticsEngine.Board
@inject ToolManager ToolManager
<div class="figure-panel">
    <h2>Figures</h2>
    <div class="figure-selection">
        @foreach(Figure figure in _figures)
        {
            <Draggable DragData="@figure" OnDragStart="@((args) => OnDragStart(args, figure))" OnDragEnd="@OnDragEnd">
                <FigureRenderer Figure="@figure"/>   
            </Draggable>
        }
    </div>
</div>


@code
{
    [CascadingParameter, EditorRequired]
    public required Board CurrentBoard { get; set; }
    private List<Figure> _figures = [
		new Figure(1, 1),
        new Figure(2, 2),
        new Figure(1, 2),
        new Figure(2, 1),
        new Figure(3, 2),
        new Figure(3, 3),
    ];


    private void OnDragStart(DragEventArgs args, Figure figure)
    {
        DragFigureTool.Shared.StartDragFigure(CurrentBoard, figure);
    }

    private void OnDragEnd(DragEventArgs args)
    {
        DragFigureTool.Shared.ClearSelected();
    }

}

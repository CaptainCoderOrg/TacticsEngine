<div class="@PositionedElement @DraggedElement" style="@PositionedStyle">
	@if (IsDragging && !IsValid) {
        <div class="invalid-position"></div>
	}
	@ChildContent
</div>
@code
{
	[Parameter, EditorRequired, AllowNull]
	public RenderFragment ChildContent { get; set; }
	[Parameter, EditorRequired]
	public Position? Position { get; set; } = default;
	[Parameter]
	public bool IsValid { get; set; } = false;
	[Parameter]
	public bool IsDragging { get; set; } = false;
	private string? DraggedElement => IsDragging ? "dragged-element" : null;
	private string? PositionedElement => Position is not null ? "positioned-element" : null;
	private string? PositionedStyle => Position is not null ? $"--pos-x:{Position.X}; --pos-y:{Position.Y};" : null;
}